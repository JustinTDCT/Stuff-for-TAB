    # Sample config.conf file
    APP_NAME="My Application"
    VERSION="1.2.3"
    DEBUG=false

#!/bin/bash

    # Source the config file
    source config.conf

    # Now you can access the variables
    echo "Application Name: $APP_NAME"
    echo "Version: $VERSION"
    echo "Debug Mode: $DEBUG"
